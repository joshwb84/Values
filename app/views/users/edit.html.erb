<% provide(:title, 'Create') %>
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>

<body>
    <div class="container">
        <!-- Example row of columns -->

        <div class="row">
            <div class="col-md-9 col-md-offset-1">
            <br>
                        
                         <legend><h1> Edit your account details</h1></legend>

                       <%= simple_form_for(@user, html: { class: 'form-horizontal', multipart: true}) do |form|%>
                        <%= render 'shared/error_messages', object: @user %>
                           
                                <div class="form-group">
                                <%= form.label :name, class: "col-lg-2 control-label", required: false %>

                                    <div class="col-lg-6">
                                         <%= form.input :name, input_html: {class: "form-control"}, label: false %>  
                                    </div>
                                </div>
                                <div class="form-group">
                                <%= form.label :email, class: "col-lg-2 control-label", required: false %>

                                    <div class="col-lg-6">
                                         <%= form.input :email, input_html: {class: "form-control"}, label: false %>  
                                    </div>
                                </div>
                                <div class="form-group">
                                <%= form.label :facebook, class: "col-lg-2 control-label", required: false %>

                                    <div class="col-lg-6">
                                         <%= form.input :facebook, input_html: {class: "form-control"}, label: false, placeholder: "http://www.facebook.com/john.doe" %>  
                                    </div>
                                </div>
                                <div class="form-group">
                                <%= form.label :description, class: "col-lg-2 control-label", required: false %>

                                    <div class="col-lg-6">
                                         <%= form.input :description, input_html: {class: "form-control"}, label: false, :as => :text %>  
                                    </div>
                                </div>
                                <div class="form-group">
                                <%= form.label :password, class: "col-lg-2 control-label", required: false %>

                                    <div class="col-lg-6">
                                         <%= form.input :password, input_html: {class: "form-control"}, label: false %>  
                                    </div>
                                </div>
                                <div class="form-group">
                                

                                    <div class="col-lg-6">
                                         
                                    </div>
                                </div>

                                <div class="col-lg-10 col-lg-offset-2">
<%= form.button :submit, class: "btn btn-success" %>  &nbsp; <%= link_to "Cancel", user_path, class: "btn btn-warning"  %>  
                                </div>
                                    <% end %> 
                    
            </div>
        </div>

        
    </div>
</body>
</html>
