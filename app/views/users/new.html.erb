<% provide(:title, 'Create') %>
<!DOCTYPE html>
<html>
<head>
    <title></title>
</head>

<body>
    <div class="container">
        <!-- Example row of columns -->

        <div class="row">
            <div class="col-md-6 col-md-offset-3">
            <h2 class="text-center">Save your values</h2>
        <p class="text-center">Already have an account? <%= link_to "Log in", login_path %></p><br>
                 <div class="well bs-component">   
                        

                       <%= simple_form_for(@user, html: { class: 'form-horizontal' }) do |form|%>
                        <%= render 'shared/error_messages', object: @user %>
                           
                                <div class="form-group">
                                <%= form.label :name, class: "col-lg-2 control-label", required: false %>

                                    <div class="col-lg-10">
                                        <%= form.input :name, input_html: {class: "form-control"}, label: false, placeholder: "Ernest Shackleton"%> 
                                    </div>
                                </div>

                                <div class="form-group">
                                    <%= form.label :email, class: "col-lg-2 control-label", required: false %>

                                    <div class="col-lg-10">
                                        <%= form.input :email, input_html: {class: "form-control"}, label: false, placeholder: "shackleton1850@yahoo.com" %>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <%= form.label :password, class: "col-lg-2 control-label", required: false %>

                                    <div class="col-lg-10">
                                        <%= form.input :password, input_html: {class: "form-control"}, label: false, required: false%>
                                    </div>
                                </div>
                                

                               <div class="form-group">
                               <%= form.label " ", class: "col-lg-2 control-label" %>
                                    <div class="col-lg-10">
                                        <%= form.input_field :terms_of_service, as: :boolean, label: false, required: false %> You have read and agree to the <%= link_to "Terms of Service", terms_path %>
                                    </div>
                                </div>
<div class="form-group">
                                <div class="col-lg-10 col-lg-offset-2">
<%= form.button :submit, class: "btn btn-success" %>  
                                </div>
                                    <% end %> </div>
                    
               </div>
            </div>
        </div>

        
    </div>
</body>
</html>
