<%= simple_form_for(@choice, html: { class: 'form-horizontal' }) do |form|%>
                        <%= render 'shared/error_messages', object: @choice %>
                                
                            <div class="form-group">
                                <%= form.label :value_id, class: "col-lg-2 control-label" %>

                                    <div class="col-lg-3">
                                        <%= form.input_field :value_id, as: :select, collection: Value.all, class: "form-control"%> 
                                        <%= form.select :value_id, class: "form-control" %>
                                    </div>
                                </div>


                                                         
                         
                                <div class="col-lg-10 col-lg-offset-2">
<%= form.button :submit, class: "btn btn-success" %>  &nbsp; <%= link_to "Cancel", choices_path, class: "btn btn-warning"  %>  
                                </div>
                                    <% end %> 

